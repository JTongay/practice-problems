{
  "extends": "@tsconfig/node18/tsconfig.json",
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "lib": [
      "dom",
      "es6"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.spec.ts"
  ],
  "compileOnSave": true
}
